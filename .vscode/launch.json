{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "cwd": "${workspaceFolder}/server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
      "sourceMaps": true,
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_FILES": "true"
      },
      "console": "integratedTerminal"
    }
  ]
}
